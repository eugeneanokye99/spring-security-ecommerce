# ============================================
# ShopJoy E-Commerce - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it's already in .gitignore

# ============================================
# JWT Configuration
# ============================================
# Secret key for JWT token signing (minimum 32 characters recommended)
# Generate a secure random string for production
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_EXPIRATION=86400000

# ============================================
# Database Configuration (if using environment variables)
# ============================================
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=shopjoy
# DB_USERNAME=postgres
# DB_PASSWORD=your-db-password

# ============================================
# OAuth2 - Google Configuration
# ============================================
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# ============================================
# Admin User Configuration
# ============================================
# Default admin user created on first startup
ADMIN_ENABLED=true
ADMIN_USERNAME=admin
ADMIN_PASSWORD=YourSecureAdminPassword123!
ADMIN_EMAIL=admin@shopjoy.com
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User
ADMIN_PHONE=555-0000

# ============================================
# CORS Configuration (optional)
# ============================================
# Comma-separated list of allowed origins
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174
